<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="10" style="-fx-padding: 20px;">
    
    <Label text="Nombre Completo:" />
    <TextField fx:id="textFieldNombre" promptText="Ej: Juan Pérez López" />
    
    <Label text="Teléfono (10 dígitos):" />
    <TextField fx:id="textFieldTelefono" promptText="Ej: 5512345678" />
    
    <Label text="Correo Electrónico:" />
    <TextField fx:id="textFieldCorreo" promptText="Ej: juan.perez@correo.com" />
    
    <Label text="Dirección:" />
    <TextField fx:id="textFieldDireccion" promptText="Ej: Calle Falsa 123, Col. Centro" />
    
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10px 0 0 0;">
        <Button text="Guardar" onAction="#handleGuardar" style="-fx-base: #4CAF50; -fx-text-fill: white;" />
        <Button text="Cancelar" onAction="#handleCancelar" />
    </HBox>
    
</VBox>