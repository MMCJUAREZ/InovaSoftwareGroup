             <Button onAction="#handleAgregar" prefHeight="30.0" prefWidth="85.0" style="-fx-min-width: 80px; -fx-min-height: 25px;" text="Agregar" />
            <Button mnemonicParsing="false" onAction="#handleModificar" prefHeight="30.0" prefWidth="85.0" text="Modificar" />
         </children></VBox>
   </right>
    
</BorderPane>
