<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" style="-fx-padding: 15px;">

    <Label text="GestiÃ³n de Citas" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Crear Nueva Cita" onAction="#handleCrearCita"
                style="-fx-base: #007BFF; -fx-text-fill: white;" />
        <Button text="Modificar Cita Seleccionada" onAction="#handleModificarCita" />
        <Button text="Cancelar Cita Seleccionada" onAction="#handleEliminarCita"
                style="-fx-base: #DC3545; -fx-text-fill: white;" />
    </HBox>

    <TableView fx:id="tableCitas" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50" />
            <TableColumn fx:id="fechaHoraColumn" text="Fecha y Hora" prefWidth="150" />
            <TableColumn fx:id="tipoColumn" text="Tipo de Servicio" prefWidth="120" />
            <TableColumn fx:id="nombreColumn" text="Solicitante" prefWidth="150" />
            <TableColumn fx:id="contactoColumn" text="Contacto" prefWidth="150" />
            <TableColumn fx:id="estadoColumn" text="Estado" prefWidth="80" />
        </columns>
        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button text="Cerrar" onAction="#handleCerrar" />
    </HBox>

</VBox>