<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-padding: 15px;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestión de Clientes" />
    
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button onAction="#handleRegistrarCliente" style="-fx-base: #007BFF; -fx-text-fill: white;" text="Registrar Nuevo Cliente" />
        <Button onAction="#handleEliminarCliente" style="-fx-base: #DC3545; -fx-text-fill: white;" text="Eliminar Cliente Seleccionado" />
      <Button mnemonicParsing="false" onAction="#handleSeleccionarMembresia" text="SeleccionarMembresia" />
    </HBox>
    
    <TableView fx:id="tableClientes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="nombreColumn" prefWidth="150" text="Nombre Completo" />
            <TableColumn fx:id="telefonoColumn" prefWidth="100" text="Teléfono" />
            <TableColumn fx:id="correoColumn" prefWidth="150" text="Correo" />
            <TableColumn fx:id="direccionColumn" prefWidth="200" text="Dirección" />
        </columns>
    </TableView>
    
    <HBox alignment="CENTER_RIGHT">
        <Button onAction="#handleCerrar" text="Cerrar" />
    </HBox>
    
</VBox>
