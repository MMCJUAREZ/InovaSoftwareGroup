<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mx.uam.ayd.proyecto.presentacion.registroHospedaje.VentanaRegistroHospedaje"
      style="-fx-padding: 15px;">

    <Label text="Registro de Hospedaje" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="100"/>
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>

        <Label text="Seleccionar Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbCliente" onAction="#handleClienteSeleccionado" prefWidth="250"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Seleccionar Mascota:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cmbMascota" onAction="#handleMascotaSeleccionada" prefWidth="250"
                  GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Fecha de Inicio:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateInicio" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Fecha de Fin:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateFin" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10px 0 0 0;">
        <Button fx:id="btnRegistrarHospedaje" text="Registrar Hospedaje" onAction="#registrarHospedaje" style="-fx-min-width: 150px;"/>
    </HBox>

</VBox>